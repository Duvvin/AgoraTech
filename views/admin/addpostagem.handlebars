{{#each erros}}
    <div class="alert alert-danger">{{erro}}</div>
{{else}}

{{/each}}

<div class="post-wrapper">
    <div class="post-card">
        <h2 class="post-title">Nova Postagem</h2>

        <form action="/posts/add/success" method="post" enctype="multipart/form-data">

            <div class="input-group">
                <label for="titulo">Título</label>
                <input type="text" name="titulo" id="titulo" required>
            </div>

            <div class="input-group">
                <label for="descricao">Descrição</label>
                <input type="text" name="descricao" id="descricao" required>
            </div>

            <div class="input-group">
                <label for="conteudo">Conteúdo</label>
                <textarea name="conteudo" id="conteudo" rows="6" required></textarea>
            </div>

            <div class="input-group">
                <label for="file">Envie uma foto</label>
                <input type="file" name="file" id="file">
            </div>

            <div class="input-group">
                <label for="categoria">Selecione uma Categoria</label>
                <select name="categoria" id="categoria">
                    {{#each categorias}}
                        <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                        <option value="0">Nenhuma</option>
                    {{/each}}
                </select>
            </div>

            <button type="submit" class="btn-submit">Publicar Notícia</button>

        </form>
    </div>
</div>